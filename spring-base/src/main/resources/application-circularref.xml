<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
">

    <aop:aspectj-autoproxy proxy-target-class="true" />
    <context:component-scan base-package="site.shitao.spring.base.circularref" />

    <bean id="beanA" class="site.shitao.spring.base.circularref.BeanA">
        <property name="beanB" ref="beanB"></property>
    </bean>

    <bean id="beanB" class="site.shitao.spring.base.circularref.BeanB">
        <property name="beanA" ref="beanA"></property>
    </bean>

</beans>